<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="single">
          <h3 class="title">Jeux: <b><%= blog.title %></b></h3>
          <p class="snippet">Console: <b><%= blog.snippet %></b></p>
          <p class="price snippet">Prix Maximum qu'il l'ach√®terais: <b><%= blog.price %>$</b></p>
          <div class="wrapper">
            <a href="/blogs/<%= blog._id %>">Contacter Ce Collectionneur</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>


  <%- include("../partials/footer.ejs") %>
</body>
</html>